<div class="container">
	<div class="alert alert-info center" style="margin-top:20px;">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<h4>Para ver el video debes estar registrado, <%= link_to "pincha aquÃ­.", new_registration_path(resource_name), :class => "alert-link" %></h4>
	</div>
<div class="form-group log" style="margin-top:10px;">
<h2>Hora de estudiar?</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :class => 'form-control' %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :class => 'form-control' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Ingresar", :class => 'btn btn-default pull-left' %></div>
<br>
<% end %>
<hr>

<%= render "devise/shared/links" %>
</div>
</div>